# Optional: canonical base URL for published sites (e.g. https://localed.info). Used for "View site" link and QR code so they always point to this domain.
NEXT_PUBLIC_SITE_URL=
# Supabase (optional for Phase 1 — use dev owner)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Service role key (Supabase Dashboard → Settings → API → service_role). Required in dev when no session so dashboard can bypass RLS.
SUPABASE_SERVICE_ROLE_KEY=
# Phase 1 dev owner: set to a user UUID from Supabase (Auth → Users). Used when no session in development.
LOCALED_DEV_OWNER_ID=
# Admin panel: comma-separated user UUIDs that can access /admin and manage feature flags.
LOCALED_ADMIN_IDS=
# Contact form → email to owner (CONTACT-01.4). Optional: leave unset to skip sending.
RESEND_API_KEY=
# Sender for contact notifications (default: Localed <onboarding@resend.dev>).
RESEND_FROM=
